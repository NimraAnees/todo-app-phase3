# Database Configuration
# Get your connection string from Neon Console: https://console.neon.tech
DATABASE_URL=postgresql://user:password@host:5432/dbname

# Authentication Secret
# Generate with: openssl rand -base64 48
# CRITICAL: Use the SAME secret in frontend/.env.local
BETTER_AUTH_SECRET=your-64-character-random-secret-here

# CORS Configuration
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,https://yourapp.com

# Application Settings
APP_NAME="Todo App Authentication API"
DEBUG=False
